{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <h1>List of products</h1>
    <a class="url_new" href="http://127.0.0.1:8000/product/add">New</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Stock</th>
                <th colspan="3">Param</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.stock }}</td>
                    <td><a href="http://127.0.0.1:8000/product/edit/{{ product.id }}">Edit</a></td>
                    <td><a href="http://127.0.0.1:8000/product/show/{{ product.id }}">Show</a></td>
                    <td><a href="http://127.0.0.1:8000/product/delete/{{ product.id }}">Delete</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    

{% endblock %}